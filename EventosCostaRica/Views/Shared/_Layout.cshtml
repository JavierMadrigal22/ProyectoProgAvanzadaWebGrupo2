@{
    var ctrl = ViewContext.RouteData.Values["controller"]?.ToString();
    var act = ViewContext.RouteData.Values["action"]?.ToString();
    bool isAuthPage = ctrl == "Account" && (act == "Login" || act == "Register");
    var isAdmin = User.IsInRole("Administrador");
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eventos Costa Rica</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EventosCostaRica.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        html {
            position: relative;
            min-height: 100%;
        }

        body {
            margin-bottom: 120px !important;
        }

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 60px;
        }

        .main-content {
            padding-bottom: 80px;
        }
    </style>
</head>
<body>
    @if (!isAuthPage)
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-gothic shadow-sm">
                <div class="container">
                    <a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-calendar-alt"></i> Eventos Costa Rica
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarContent">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link text-white @(ctrl == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home"></i> Inicio
                                </a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white @(ctrl == "ListaEvento" ? "active" : "")" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-calendar-day"></i> Eventos
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="ListaEvento" asp-action="ProximosEventos">
                                            <i class="fas fa-clock text-primary me-2"></i>Próximos
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white @(ctrl == "Boleto" ? "active" : "")" asp-controller="Boleto" asp-action="MisBoletos">
                                        <i class="fas fa-ticket-alt"></i> Mis Boletos
                                    </a>
                                </li>
                            }

                            @if (isAdmin)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white @(ctrl == "Usuario" ? "active" : "")" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-cog"></i> Administración
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Usuario" asp-action="Index">
                                                <i class="fas fa-users text-primary me-2"></i> Usuarios
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="ListaEvento" asp-action="Index">
                                                <i class="fas fa-calendar-check text-info me-2"></i> Eventos
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        </ul>

                        <ul class="navbar-nav">
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-user-circle"></i> @User.Identity.Name
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Boleto" asp-action="MisBoletos">
                                                <i class="fas fa-ticket-alt text-info me-2"></i>Mis Boletos
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="fas fa-sign-out-alt me-2"></i> Cerrar Sesión
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Account" asp-action="Login">
                                        <i class="fas fa-sign-in-alt"></i> Ingresar
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Account" asp-action="Register">
                                        <i class="fas fa-user-plus"></i> Registrarse
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="footer bg-gothic text-white py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; @DateTime.Now.Year - Eventos Costa Rica</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-none">
                        <i class="fas fa-shield-alt me-1"></i> Privacidad
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>