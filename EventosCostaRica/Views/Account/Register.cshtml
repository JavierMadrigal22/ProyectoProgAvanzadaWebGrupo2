@model RegisterViewModel

<div class="auth-wrapper">
    <div class="auth-card bg-white rounded-xl shadow-soft p-4 p-md-5" style="max-width: 500px;">
        <div class="text-center mb-4">
            <i class="fas fa-calendar-alt fa-3x text-gothic mb-3"></i>
            <h2 class="fw-bold text-gothic">Crear Cuenta</h2>
            <p class="text-muted">Regístrate para gestionar tus eventos y boletos</p>
        </div>

        <form asp-action="Register" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label asp-for="Nombre" class="form-label fw-semibold">Nombre</label>
                    <div class="input-group">
                        <span class="input-group-text bg-edgewater"><i class="fas fa-user"></i></span>
                        <input asp-for="Nombre" class="form-control" placeholder="Tu nombre" required />
                    </div>
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Apellido" class="form-label fw-semibold">Apellido</label>
                    <div class="input-group">
                        <span class="input-group-text bg-edgewater"><i class="fas fa-user"></i></span>
                        <input asp-for="Apellido" class="form-control" placeholder="Tu apellido" required />
                    </div>
                    <span asp-validation-for="Apellido" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Correo electrónico</label>
                <div class="input-group">
                    <span class="input-group-text bg-edgewater"><i class="fas fa-envelope"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="tu@email.com" required />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold">Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text bg-edgewater"><i class="fas fa-lock"></i></span>
                    <input asp-for="Password" class="form-control" placeholder="••••••••" required />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirmar Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text bg-edgewater"><i class="fas fa-lock"></i></span>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="••••••••" required />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefono" class="form-label fw-semibold">Teléfono</label>
                <div class="input-group">
                    <span class="input-group-text bg-edgewater"><i class="fas fa-phone"></i></span>
                    <input asp-for="Telefono" class="form-control" placeholder="8888-8888" />
                </div>
                <span asp-validation-for="Telefono" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 mb-3">Registrarse</button>

            <div class="text-center mt-3">
                <p class="mb-0">¿Ya tienes cuenta? <a asp-action="Login" class="text-gothic fw-semibold">Inicia Sesión</a></p>
            </div>
        </form>
    </div>
</div>

<style>
    .auth-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background-color: var(--edgewater);
        padding: 2rem;
    }

    .auth-card {
        width: 100%;
        border: none;
    }

    .input-group-text {
        border: none;
        color: var(--gothic);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}