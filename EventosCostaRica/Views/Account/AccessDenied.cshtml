@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h4><i class="fas fa-exclamation-triangle"></i> Acceso Denegado</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-lock fa-5x text-danger"></i>
                    </div>
                    <h5 class="text-danger">No tienes permisos para acceder a esta página</h5>
                    <p class="text-muted">
                        Lo sentimos, pero no tienes los permisos necesarios para acceder a esta funcionalidad.
                        Si crees que esto es un error, por favor contacta al administrador del sistema.
                    </p>
                    
                    <hr>
                    
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-2">
                            <i class="fas fa-home"></i> Volver al Inicio
                        </a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("Index", "ListaEvento")" class="btn btn-outline-primary">
                                <i class="fas fa-calendar"></i> Ver Eventos
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary">
                                <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                            </a>
                        }
                    </div>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="mt-4 p-3 bg-light rounded">
                            <small class="text-muted">
                                <strong>Usuario actual:</strong> @User.Identity.Name<br>
                                <strong>Rol:</strong> @User.FindFirst("Rol")?.Value
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }
    
    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
    
    .fa-lock {
        opacity: 0.3;
    }
    
    .btn {
        border-radius: 25px;
        padding: 10px 20px;
    }
    
    .bg-light {
        border: 1px solid #dee2e6;
    }
</style>
