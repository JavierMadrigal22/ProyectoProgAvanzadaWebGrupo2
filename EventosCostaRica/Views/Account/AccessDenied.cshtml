@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-soft">
                <div class="card-header bg-gothic text-white text-center py-4">
                    <h3 class="mb-0"><i class="fas fa-lock me-2"></i> Acceso Denegado</h3>
                </div>
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-ban fa-5x text-light-orchid"></i>
                    </div>
                    <h4 class="text-gothic mb-3">No tienes permisos para acceder</h4>
                    <p class="text-muted mb-4">
                        Lo sentimos, pero no tienes los permisos necesarios para esta secci√≥n.
                        Si crees que esto es un error, por favor contacta al administrador.
                    </p>

                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i> Inicio
                        </a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("Index", "ListaEvento")" class="btn btn-outline-gothic">
                                <i class="fas fa-calendar me-2"></i> Eventos
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account")" class="btn btn-outline-gothic">
                                <i class="fas fa-sign-in-alt me-2"></i> Ingresar
                            </a>
                        }
                    </div>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="mt-5 p-3 bg-edgewater rounded-xl">
                            <small class="text-gothic">
                                <strong>Usuario:</strong> @User.Identity.Name<br>
                                <strong>Rol:</strong> @User.FindFirst("Rol")?.Value
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-outline-gothic {
        border: 1px solid var(--gothic);
        color: var(--gothic);
    }

        .btn-outline-gothic:hover {
            background-color: var(--gothic);
            color: white;
        }
</style>