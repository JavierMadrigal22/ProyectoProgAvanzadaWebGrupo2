@model IEnumerable<CapaObjetos.ViewModelos.UsuarioViewModelo>

@{
    ViewData["Title"] = "Administración de Usuarios";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <h2><i class="fas fa-users me-2"></i> @ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i> Nuevo Usuario
        </a>
    </div>

    <div class="card border-0 shadow-soft">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="bg-gothic text-white">
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Email</th>
                            <th>Rol</th>
                            <th>Teléfono</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>
                                    @if (item.Rol == 1)
                                    {
                                        <span class="badge bg-gothic">Administrador</span>
                                    }
                                    else if (item.Rol == 2)
                                    {
                                        <span class="badge bg-opal">Cliente</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light-orchid">Desconocido</span>
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                                <td>
                                    <span class="badge @(item.Estado ? "bg-opal" : "bg-light-orchid")">
                                        @(item.Estado ? "Activo" : "Inactivo")
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.UsuarioId" class="btn btn-sm btn-outline-gothic">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.UsuarioId" class="btn btn-sm btn-outline-gothic">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.UsuarioId" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        font-weight: 500;
    }

    .table-hover tbody tr:hover {
        background-color: var(--aqua-squeeze);
    }
</style>