@model CapaObjetos.ViewModelos.UsuarioViewModelo

@{
    ViewData["Title"] = "Detalles de Usuario";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-soft">
                <div class="card-header bg-gothic text-white">
                    <h3 class="mb-0"><i class="fas fa-user me-2"></i> Detalles de Usuario</h3>
                </div>
                <div class="card-body p-4 p-md-5">
                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="border rounded p-3 bg-aqua-squeeze h-100">
                                <label class="form-label text-muted small mb-1">
                                    <i class="fas fa-id-card me-2"></i> Nombre
                                </label>
                                <p class="h5 mb-0">@Model.Nombre</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="border rounded p-3 bg-aqua-squeeze h-100">
                                <label class="form-label text-muted small mb-1">
                                    <i class="fas fa-id-card me-2"></i> Apellido
                                </label>
                                <p class="h5 mb-0">@Model.Apellido</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="border rounded p-3 bg-aqua-squeeze h-100">
                                <label class="form-label text-muted small mb-1">
                                    <i class="fas fa-envelope me-2"></i> Email
                                </label>
                                <p class="mb-0">@Model.Email</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="border rounded p-3 bg-aqua-squeeze h-100">
                                <label class="form-label text-muted small mb-1">
                                    <i class="fas fa-phone me-2"></i> Teléfono
                                </label>
                                <p class="mb-0">@Model.Telefono</p>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="border rounded p-3 bg-aqua-squeeze h-100">
                                <label class="form-label text-muted small mb-1">
                                    <i class="fas fa-user-tag me-2"></i> Rol
                                </label>
                                <p class="mb-0">
                                    @if (Model.Rol == 1)
                                    {
                                        <span class="badge bg-gothic">Administrador</span>
                                    }
                                    else if (Model.Rol == 2)
                                    {
                                        <span class="badge bg-opal">Cliente</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light-orchid">Desconocido</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="border rounded p-3 bg-aqua-squeeze h-100">
                                <label class="form-label text-muted small mb-1">
                                    <i class="fas fa-toggle-on me-2"></i> Estado
                                </label>
                                <p class="mb-0">
                                    @if (Model.Estado)
                                    {
                                        <span class="badge bg-opal">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light-orchid">Inactivo</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between flex-wrap gap-3">
                        <a asp-action="Index" class="btn btn-outline-gothic">
                            <i class="fas fa-arrow-left me-2"></i> Volver
                        </a>
                        <div class="d-flex gap-3">
                            <a asp-action="Edit" asp-route-id="@Model.UsuarioId" class="btn btn-primary">
                                <i class="fas fa-edit me-2"></i> Editar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>