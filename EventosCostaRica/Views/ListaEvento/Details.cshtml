@model CapaObjetos.ViewModelos.EventoDetalleViewModelo

@{
    ViewData["Title"] = "Detalles del Evento";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-soft">
                @if (!string.IsNullOrEmpty(Model.Banner))
                {
                    <img src="@Model.Banner" class="card-img-top" alt="Banner del evento" style="height: 300px; object-fit: cover;">
                }
                <div class="card-header bg-gothic text-white">
                    <h1 class="card-title mb-0 text-white">@Model.Nombre</h1>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <span class="badge @(Model.Estado ? "bg-opal" : "bg-light-orchid")">
                            @(Model.Estado ? "Activo" : "Inactivo")
                        </span>
                        <span class="badge @(Model.EstaVendido ? "bg-light-orchid" : "bg-opal")">
                            @(Model.EstaVendido ? "VENDIDO" : "DISPONIBLE")
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <h5 class="text-gothic"><i class="fas fa-map-marker-alt me-2"></i> Ubicación</h5>
                            <p class="text-muted">@Model.Ubicacion</p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-gothic"><i class="fas fa-calendar-alt me-2"></i> Fecha y Hora</h5>
                            <p class="text-muted">@Model.FechaHora.ToString("dddd, dd 'de' MMMM 'de' yyyy 'a las' HH:mm")</p>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5 class="text-gothic"><i class="fas fa-info-circle me-2"></i> Descripción</h5>
                        <p>@Model.Descripcion</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-soft">
                <div class="card-header bg-gothic text-white">
                    <h5 class="mb-0"><i class="fas fa-ticket-alt me-2"></i> Boletos</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="mb-1"><strong>Precio por boleto:</strong></p>
                        <h4 class="text-gothic">₡@Model.PrecioBase.ToString("N2")</h4>
                    </div>

                    <div class="mb-3">
                        <p class="mb-1"><strong>Capacidad total:</strong></p>
                        <p>@Model.Capacidad personas</p>
                    </div>

                    <div class="mb-3">
                        <p class="mb-1"><strong>Asientos ocupados:</strong></p>
                        <p class="text-light-orchid">@Model.AsientosOcupados</p>
                    </div>

                    <div class="mb-4">
                        <p class="mb-1"><strong>Asientos disponibles:</strong></p>
                        <p class="text-opal">@Model.AsientosDisponibles</p>
                    </div>

                    <div class="progress mb-4">
                        <div class="progress-bar bg-gothic" role="progressbar"
                             style="width: @(((double)Model.AsientosOcupados / Model.Capacidad) * 100)%">
                            @(((double)Model.AsientosOcupados / Model.Capacidad) * 100).ToString("F1")% Ocupado
                        </div>
                    </div>

                    @if (Model.PuedeComprar)
                    {
                        <div class="d-grid">
                            <a asp-controller="Boleto" asp-action="Comprar" asp-route-id="@Model.EventoId"
                               class="btn btn-primary">
                                <i class="fas fa-shopping-cart me-2"></i> Comprar Boletos
                            </a>
                        </div>
                    }
                    else if (Model.EstaVendido)
                    {
                        <div class="alert alert-light-orchid text-white text-center">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Evento Vendido</strong><br>
                            No hay asientos disponibles
                        </div>
                    }
                    else if (!Model.EsProximoEvento)
                    {
                        <div class="alert alert-edgewater text-center">
                            <i class="fas fa-clock me-2"></i>
                            <strong>Evento Pasado</strong><br>
                            Este evento ya ocurrió
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-soft mb-4">
                <div class="card-header bg-gothic text-white">
                    <h5 class="mb-0"><i class="fas fa-couch me-2"></i> Distribución de Asientos</h5>
                    <small class="text-opal">10 filas × 10 asientos = 100 personas</small>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="badge bg-dark px-3 py-2">ESCENARIO</div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-auto">
                            <div class="d-flex justify-content-center gap-4 mb-4">
                                <div>
                                    <span class="badge bg-opal me-2">■</span> Disponible
                                </div>
                                <div>
                                    <span class="badge bg-light-orchid me-2">■</span> Ocupado
                                </div>
                            </div>

                            <div class="asientos-container">
                                @for (int fila = 1; fila <= 10; fila++)
                                {
                                    <div class="fila-asientos mb-2">
                                        <span class="fila-numero text-gothic fw-bold">@fila</span>
                                        @for (int numero = 1; numero <= 10; numero++)
                                        {
                                            var asiento = Model.Asientos.FirstOrDefault(a => a.Fila == fila && a.Numero == numero);
                                            var disponible = asiento == null || !asiento.EstaOcupado;

                                            <span class="asiento @(disponible ? "disponible bg-opal" : "ocupado bg-light-orchid")"
                                                  title="Fila @fila - Asiento @numero (@(disponible ? "Disponible" : "Ocupado"))">
                                                @numero
                                            </span>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="d-flex justify-content-between flex-wrap gap-3 py-4">
                <a asp-action="ProximosEventos" class="btn btn-outline-gothic">
                    <i class="fas fa-arrow-left me-2"></i> Volver
                </a>
                @if (User.IsInRole("Administrador"))
                {
                    <div class="d-flex gap-3">
                        <a asp-action="Edit" asp-route-id="@Model.EventoId" class="btn btn-outline-gothic">
                            <i class="fas fa-edit me-2"></i> Editar
                        </a>
                        <a asp-controller="Boleto" asp-action="EventoBoletos" asp-route-id="@Model.EventoId" class="btn btn-primary">
                            <i class="fas fa-list me-2"></i> Ver Boletos
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .asientos-container {
        max-width: 600px;
        margin: 0 auto;
        max-height: 400px;
        overflow-y: auto;
        padding: 10px;
        margin-bottom: 1rem;
    }

    .fila-asientos {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 4px;
        margin-bottom: 0.5rem;
    }

    .fila-numero {
        width: 25px;
        text-align: center;
        margin-right: 10px;
    }

    .asiento {
        display: inline-flex;
        width: 26px;
        height: 26px;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        font-size: 10px;
        font-weight: 500;
        color: white;
        cursor: default;
    }

    body {
        padding-bottom: 100px !important;
    }
</style>