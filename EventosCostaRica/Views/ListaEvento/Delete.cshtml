@model CapaObjetos.ViewModelos.ListaEventoViewModelo

@{
    ViewData["Title"] = "Eliminar Evento";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-soft border-danger">
                <div class="card-header bg-light-orchid text-white">
                    <h3 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i> @ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4 p-md-5">
                    <h5 class="mb-4 text-white">¿Estás seguro que deseas eliminar este evento?</h5>

                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="border rounded p-3 bg-aqua-squeeze h-100">
                                <label class="form-label text-muted small mb-1">
                                    <i class="fas fa-tag me-2"></i> Nombre
                                </label>
                                <p class="h5 mb-0">@Model.Nombre</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="border rounded p-3 bg-aqua-squeeze h-100">
                                <label class="form-label text-muted small mb-1">
                                    <i class="fas fa-map-marker-alt me-2"></i> Ubicación
                                </label>
                                <p class="mb-0">@Model.Ubicacion</p>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="border rounded p-3 bg-aqua-squeeze">
                                <label class="form-label text-muted small mb-1">
                                    <i class="fas fa-align-left me-2"></i> Descripción
                                </label>
                                <p class="mb-0">@Model.Descripcion</p>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-edgewater mb-4">
                        <i class="fas fa-exclamation-triangle me-2 text-gothic"></i>
                        <strong>Advertencia:</strong> Esta acción eliminará permanentemente el evento y todos los boletos asociados.
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="EventoId" />
                        <div class="d-flex justify-content-between flex-wrap gap-3">
                            <a asp-action="Index" class="btn btn-outline-gothic">
                                <i class="fas fa-arrow-left me-2"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i> Confirmar Eliminación
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>