@model CapaObjetos.ViewModelos.ListaEventoViewModelo

@{
    ViewData["Title"] = "Crear Evento";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-soft">
                <div class="card-header bg-gothic text-white py-4">
                    <h3 class="mb-0 text-white"><i class="fas fa-plus-circle me-2"></i> Crear Nuevo Evento</h3>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Nombre" class="form-label fw-semibold">
                                        <i class="fas fa-tag text-gothic me-2"></i>Nombre del Evento
                                    </label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre del evento" />
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Ubicacion" class="form-label fw-semibold">
                                        <i class="fas fa-map-marker-alt text-gothic me-2"></i>Ubicación
                                    </label>
                                    <input asp-for="Ubicacion" class="form-control" placeholder="Ubicación del evento" />
                                    <span asp-validation-for="Ubicacion" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Descripcion" class="form-label fw-semibold">
                                <i class="fas fa-align-left text-gothic me-2"></i>Descripción
                            </label>
                            <textarea asp-for="Descripcion" class="form-control" rows="4"
                                      placeholder="Descripción detallada del evento"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Capacidad" class="form-label fw-semibold">
                                        <i class="fas fa-users text-gothic me-2"></i>Capacidad
                                    </label>
                                    <input asp-for="Capacidad" class="form-control" value="100" min="1" max="100"
                                           placeholder="Máximo 100 personas" />
                                    <small class="text-muted">Máximo 100 personas (10x10 asientos)</small>
                                    <span asp-validation-for="Capacidad" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="FechaHora" class="form-label fw-semibold">
                                        <i class="fas fa-calendar-alt text-gothic me-2"></i>Fecha y Hora
                                    </label>
                                    <input asp-for="FechaHora" type="datetime-local" class="form-control"
                                           min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                                    <span asp-validation-for="FechaHora" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="PrecioBase" class="form-label fw-semibold">
                                        <i class="fas fa-dollar-sign text-gothic me-2"></i>Precio
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">₡</span>
                                        <input asp-for="PrecioBase" class="form-control" step="0.01" min="0.01"
                                               placeholder="0.00" />
                                    </div>
                                    <span asp-validation-for="PrecioBase" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Banner" class="form-label fw-semibold">
                                        <i class="fas fa-image text-gothic me-2"></i>Banner (URL)
                                    </label>
                                    <input asp-for="Banner" type="url" class="form-control"
                                           placeholder="https://ejemplo.com/imagen.jpg" />
                                    <small class="text-muted">URL de la imagen del banner (opcional)</small>
                                    <span asp-validation-for="Banner" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Estado" class="form-label fw-semibold">
                                        <i class="fas fa-toggle-on text-gothic me-2"></i>Estado
                                    </label>
                                    <select asp-for="Estado" class="form-select">
                                        <option value="true" selected>Activo</option>
                                        <option value="false">Inactivo</option>
                                    </select>
                                    <span asp-validation-for="Estado" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-edgewater mb-4">
                            <i class="fas fa-info-circle text-gothic me-2"></i>
                            <strong>Información:</strong> Se generarán 100 asientos distribuidos en 10 filas de 10 asientos cada una.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-gothic">
                                <i class="fas fa-arrow-left me-2"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i> Crear Evento
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fechaInput = document.querySelector('input[type="datetime-local"]');
            if (fechaInput) {
                const now = new Date();
                const year = now.getFullYear();
                const month = String(now.getMonth() + 1).padStart(2, '0');
                const day = String(now.getDate()).padStart(2, '0');
                const hours = String(now.getHours()).padStart(2, '0');
                const minutes = String(now.getMinutes()).padStart(2, '0');

                fechaInput.min = `${year}-${month}-${day}T${hours}:${minutes}`;
            }
        });
    </script>
}