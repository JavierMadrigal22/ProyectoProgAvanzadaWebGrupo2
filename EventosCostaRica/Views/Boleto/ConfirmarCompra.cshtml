@model CapaObjetos.ViewModelos.ComprarBoletoViewModelo

@{
    ViewData["Title"] = "Confirmar Compra";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-soft">
                <div class="card-header bg-gothic text-white text-center py-4">
                    <h3 class="mb-0"><i class="fas fa-shopping-cart me-2"></i> Confirmar Compra</h3>
                    <p class="mb-0 small">Revise los detalles antes de proceder al pago</p>
                </div>
                <div class="card-body p-4 p-md-5">
                    <div class="mb-5">
                        <h5 class="text-gothic mb-3"><i class="fas fa-calendar-alt me-2"></i> Información del Evento</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Evento:</strong></p>
                                <p>@Model.Evento.Nombre</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Fecha:</strong></p>
                                <p>@Model.Evento.FechaHora.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Ubicación:</strong></p>
                                <p>@Model.Evento.Ubicacion</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Precio por boleto:</strong></p>
                                <p>₡@Model.Evento.PrecioBase.ToString("N2")</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-5">
                        <h5 class="text-gothic mb-3"><i class="fas fa-chair me-2"></i> Asientos Seleccionados</h5>
                        <div class="row g-2">
                            @foreach (var asientoId in Model.AsientosSeleccionados)
                            {
                                var asiento = Model.Asientos.FirstOrDefault(a => a.AsientoId == asientoId);
                                if (asiento != null)
                                {
                                    <div class="col-6 col-md-4 col-lg-3">
                                        <div class="border rounded p-2 text-center bg-aqua-squeeze">
                                            <small class="text-gothic fw-bold">Fila @asiento.Fila - Asiento @asiento.Numero</small>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>

                    <div class="mb-5">
                        <h5 class="text-gothic mb-3"><i class="fas fa-calculator me-2"></i> Resumen de Pago</h5>
                        <div class="table-responsive">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td><strong>Cantidad de boletos:</strong></td>
                                        <td class="text-end">@Model.AsientosSeleccionados.Count</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Precio por boleto:</strong></td>
                                        <td class="text-end">₡@Model.Evento.PrecioBase.ToString("N2")</td>
                                    </tr>
                                    <tr class="border-top">
                                        <td><strong class="h5">Total a pagar:</strong></td>
                                        <td class="text-end"><strong class="h5 text-gothic">₡@Model.PrecioTotal.ToString("N2")</strong></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="mb-5">
                        <h5 class="text-gothic mb-3"><i class="fas fa-credit-card me-2"></i> Método de Pago</h5>
                        <div class="alert alert-edgewater mb-4">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Pago simulado:</strong> Este es un sistema de demostración. No se procesará ningún pago real.
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="radio" name="metodoPago" id="tarjeta" value="tarjeta" checked>
                            <label class="form-check-label" for="tarjeta">
                                <i class="fas fa-credit-card me-2"></i> Tarjeta de Crédito/Débito
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="metodoPago" id="sinpe" value="sinpe">
                            <label class="form-check-label" for="sinpe">
                                <i class="fas fa-mobile-alt me-2"></i> SINPE Móvil
                            </label>
                        </div>
                    </div>

                    <div class="mb-5">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="aceptoTerminos" required>
                            <label class="form-check-label" for="aceptoTerminos">
                                Acepto los <a href="#" data-bs-toggle="modal" data-bs-target="#terminosModal">términos y condiciones</a>
                            </label>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between flex-wrap gap-3">
                        <a asp-action="Comprar" asp-route-id="@Model.EventoId" class="btn btn-outline-gothic flex-grow-1">
                            <i class="fas fa-arrow-left me-2"></i> Modificar Selección
                        </a>

                        <form asp-action="ProcesarPago" method="post" class="flex-grow-1">
                            <input type="hidden" asp-for="EventoId" />
                            <input type="hidden" asp-for="UsuarioId" />
                            @for (int i = 0; i < Model.AsientosSeleccionados.Count; i++)
                            {
                                <input type="hidden" name="AsientosSeleccionados[@i]" value="@Model.AsientosSeleccionados[i]" />
                            }

                            <button type="submit" class="btn btn-primary w-100" id="btnProcesarPago" disabled>
                                <i class="fas fa-lock me-2"></i> Procesar Pago (₡@Model.PrecioTotal.ToString("N2"))
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Términos -->
<div class="modal fade" id="terminosModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-gothic text-white">
                <h5 class="modal-title">Términos y Condiciones</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <h6>1. Compra de Boletos</h6>
                <p class="mb-3">Los boletos son válidos únicamente para el evento, fecha y asientos especificados.</p>

                <h6>2. Política de Devoluciones</h6>
                <p class="mb-3">Las devoluciones solo se aceptan con 48 horas de anticipación al evento.</p>

                <h6>3. Responsabilidades</h6>
                <p class="mb-3">El organizador no se hace responsable por objetos perdidos o dañados durante el evento.</p>

                <h6>4. Código de Conducta</h6>
                <p class="mb-0">Los asistentes deben mantener un comportamiento apropiado durante el evento.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-gothic" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const checkboxTerminos = document.getElementById('aceptoTerminos');
        const btnProcesarPago = document.getElementById('btnProcesarPago');

        checkboxTerminos.addEventListener('change', function() {
            btnProcesarPago.disabled = !this.checked;
        });
    });
</script>