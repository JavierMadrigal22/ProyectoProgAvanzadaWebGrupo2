@model List<CapaObjetos.ViewModelos.BoletoViewModelo>

@{
    ViewData["Title"] = "Boletos del Evento";
    var evento = ViewBag.Evento as CapaObjetos.ViewModelos.ListaEventoViewModelo;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-list"></i> Boletos del Evento</h2>
            @if (evento != null)
            {
                <p class="text-muted mb-0">@evento.Nombre</p>
            }
        </div>
        <a asp-controller="ListaEvento" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver a Eventos
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <!-- Estadísticas -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h3>@Model.Count()</h3>
                        <p class="mb-0">Total Boletos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h3>@Model.Count(b => b.Estado)</h3>
                        <p class="mb-0">Boletos Válidos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <h3>₡@Model.Where(b => b.Estado).Sum(b => b.Precio).ToString("N0")</h3>
                        <p class="mb-0">Ingresos Total</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h3>@Model.GroupBy(b => b.UsuarioId).Count()</h3>
                        <p class="mb-0">Compradores</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabla de boletos -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-table"></i> Lista de Boletos Vendidos</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID Boleto</th>
                                <th>Comprador</th>
                                <th>Asiento</th>
                                <th>Precio</th>
                                <th>Fecha Compra</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var boleto in Model.OrderBy(b => b.InformacionAsiento))
                            {
                                <tr>
                                    <td>
                                        <strong>#@boleto.BoletoId</strong>
                                    </td>
                                    <td>
                                        <i class="fas fa-user"></i> @boleto.NombreUsuario
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@boleto.InformacionAsiento</span>
                                    </td>
                                    <td>
                                        <strong class="text-success">₡@boleto.Precio.ToString("N2")</strong>
                                    </td>
                                    <td>
                                        <small>
                                            @boleto.FechaCompra.ToString("dd/MM/yyyy")<br>
                                            <span class="text-muted">@boleto.FechaCompra.ToString("HH:mm")</span>
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge @(boleto.Estado ? "bg-success" : "bg-danger")">
                                            @(boleto.Estado ? "Válido" : "Cancelado")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@boleto.BoletoId" 
                                               class="btn btn-sm btn-outline-primary" title="Ver Detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (boleto.Estado)
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                                        title="Cancelar Boleto" data-bs-toggle="modal" 
                                                        data-bs-target="#cancelarModal-@boleto.BoletoId">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Distribución de asientos -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-couch"></i> Distribución de Asientos</h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <div class="badge bg-dark p-2 mb-3">ESCENARIO</div>
                    <div>
                        <span class="badge bg-success me-2">■ Disponible</span>
                        <span class="badge bg-danger">■ Vendido</span>
                    </div>
                </div>
                
                <div class="asientos-container">
                    @for (int fila = 1; fila <= 10; fila++)
                    {
                        <div class="fila-asientos mb-1">
                            <span class="fila-numero">@fila</span>
                            @for (int numero = 1; numero <= 10; numero++)
                            {
                                var boletoAsiento = Model.FirstOrDefault(b => 
                                    b.InformacionAsiento.Contains($"Fila {fila}") && 
                                    b.InformacionAsiento.Contains($"Asiento {numero}") && 
                                    b.Estado);
                                var vendido = boletoAsiento != null;
                                
                                <span class="asiento-mini @(vendido ? "vendido" : "disponible")" 
                                      title="Fila @fila - Asiento @numero (@(vendido ? $"Vendido a {boletoAsiento.NombreUsuario}" : "Disponible"))">
                                    @numero
                                </span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center mt-5">
            <div class="mb-4">
                <i class="fas fa-ticket-alt fa-5x text-muted"></i>
            </div>
            <h4 class="text-muted">No se han vendido boletos para este evento</h4>
            <p class="text-muted">Cuando se vendan boletos, aparecerán aquí.</p>
        </div>
    }
</div>

<!-- Modales de cancelación -->
@foreach (var boleto in Model.Where(b => b.Estado))
{
    <div class="modal fade" id="cancelarModal-@boleto.BoletoId" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cancelar Boleto</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro de que desea cancelar el boleto #@boleto.BoletoId?</p>
                    <p><strong>Comprador:</strong> @boleto.NombreUsuario</p>
                    <p><strong>Asiento:</strong> @boleto.InformacionAsiento</p>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        Esta acción no se puede deshacer y liberará el asiento.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form asp-action="CancelarBoleto" method="post" class="d-inline">
                        <input type="hidden" name="boletoId" value="@boleto.BoletoId" />
                        <button type="submit" class="btn btn-danger">Confirmar Cancelación</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .asientos-container {
        max-width: 500px;
        margin: 0 auto;
    }
    
    .fila-asientos {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2px;
    }
    
    .fila-numero {
        width: 25px;
        text-align: center;
        font-weight: bold;
        margin-right: 8px;
        font-size: 12px;
    }
    
    .asiento-mini {
        display: inline-block;
        width: 25px;
        height: 25px;
        line-height: 25px;
        text-align: center;
        border-radius: 3px;
        font-size: 8px;
        font-weight: bold;
        color: white;
        cursor: pointer;
    }
    
    .asiento-mini.disponible {
        background-color: #28a745;
    }
    
    .asiento-mini.vendido {
        background-color: #dc3545;
    }
    
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
</style>
